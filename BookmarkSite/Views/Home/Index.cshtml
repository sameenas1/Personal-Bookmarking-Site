@{
    ViewData["Title"] = "Home";
}

<!-- Landing Page Container -->
<div class="landing-page">
    <div class="overlay">
        <div class="glass-card">
            <h1 class="hero-title">Welcome to <span class="highlight">BookmarkSite</span></h1>
            <p class="hero-subtitle">Save, organize, and revisit your favorite links with ease.</p>

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <a class="btn btn-primary btn-cta" asp-controller="Bookmarks" asp-action="Index">
                    Go to My Bookmarks
                </a>
            }
            else
            {
                <div class="btn-group">
                    <a class="btn btn-success btn-cta" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    <a class="btn btn-secondary btn-cta" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </div>
            }
        </div>
    </div>
</div>


